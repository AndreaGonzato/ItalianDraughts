<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import it.units.italiandraughts.ui.InGameLabel?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.units.italiandraughts.ui.BoardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
        <GridPane fx:id="board" minWidth="500" maxWidth="500" minHeight="500" maxHeight="500">
        </GridPane>
    </VBox>
    <HBox>
        <InGameLabel fx:id="player1Name"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <InGameLabel fx:id="player2Name"/>
    </HBox>

</VBox>
