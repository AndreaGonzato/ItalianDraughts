<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.units.italiandraughts.ui.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
        <Label fx:id="player1Label" text="First player's name:">
            <HBox.margin>
                <Insets>
                    <right>10</right>
                </Insets>
            </HBox.margin>
        </Label>
        <TextField fx:id="player1Field"/>
    </HBox>
    <HBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <Label fx:id="player2Label" text="Second player's name:">
        <HBox.margin>
            <Insets>
                <right>10</right>
            </Insets>
        </HBox.margin>
    </Label>
    <TextField fx:id="player2Field"/>
    </HBox>
    <HBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <Button text="Start" onAction="#startGame" prefHeight="30" prefWidth="50">
        <HBox.margin>
            <Insets>
                <right>20</right>
            </Insets>
        </HBox.margin>
        </Button>

    <Button text="Exit" onAction="#quitGame" prefHeight="30" prefWidth="50"/>
    </HBox>
</VBox>
