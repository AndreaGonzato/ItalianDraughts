<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.units.italiandraughts.BoardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
        <GridPane fx:id="board" prefWidth="500" prefHeight="500">
        </GridPane>
    </VBox>
    <HBox>
        <Label fx:id="player1Name"/>
        <Label fx:id="player2Name"/>
    </HBox>

</VBox>
